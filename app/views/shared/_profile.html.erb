
<div class="text-center">
  <% if current_user.first_name %>
    <h2>Welcome back, <%= current_user.first_name %>!</h2>
  <% else %>
    <h2>Welcome back!</h2>
  <% end %>

</div>

<h3>Your profile &nbsp;
<%= link_to edit_user_registration_path(current_user) do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %></h3>
<br>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <table class="table">
        <tr>
          <td>
          <strong>
          first name:
          </strong>
          </td>
          <td>
            <% if current_user.first_name %>
              <%= current_user.first_name %>
            <% else %>
              <i>(your first name is empty)</i>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
          <strong>
          last name:
          </strong>
          </td>
          <td>
            <% if current_user.last_name %>
              <%= current_user.last_name %>
            <% else %>
              <i>(your last name is empty)</i>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
          <strong>
          email:
          </strong>
          </td>
          <td>
            <%= current_user.email %>
          </td>
        </tr>
        <tr>
          <td>
          <strong>
          tagline:
          </strong>
          </td>
          <td>
            <% if current_user.tagline %>
              <%= current_user.tagline %>
            <% else %>
              <i>(your tagline is empty)</i>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
          <strong>
          bio:
          </strong>
          </td>
          <td>
            <% if current_user.bio %>
              <%= current_user.bio %>
            <% else %>
              <i>(your bio is empty)</i>
            <% end %>
          </td>
        </tr>


      </table>
    </div>
  </div>
</div>
