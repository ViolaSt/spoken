<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :audio_file, :label => "YouTube Link" %>
    <%= f.input :category %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :audio, :resource_type => "video"  %>
    <%= f.input :audio_cache, as: :hidden %>


  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>



