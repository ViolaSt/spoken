<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :input_html => {:maxlength => 35, :size => 40} %>
    <%= f.input :description, :input_html => {:maxlength => 250, :style => "height: 80px"} %>
    <%= f.input :category, prompt: "(Select a category)", :collection => @categories, :class => "form-input" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :audio, :resource_type => "video"  %>
    <%= f.input :audio_cache, as: :hidden %>


  </div>
  <div class="form-actions">
    <%= f.button :submit %>
    <br>
  </div>
<% end %>



