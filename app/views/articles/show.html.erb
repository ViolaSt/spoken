<p id="notice"><%= notice %></p>

<div class="container">
 <div class="row">
  <div class="col-md-8 offset-md-4">
    <h3><strong> <%= @article.title %></strong> </h3>
  </div>
</div>
<div class="row">
  <div class="col-md-1 offset-md-4">
   <%= image_tag "avatar.jpg", class: "img-circle" %>
 </div>
 <div class="col-md-3">
   <p>  <%= @article.user.first_name %> <%= @article.user.last_name %>
   </div>
   <div class="col-md-2">
    <%= link_to 'Follow', article_followings_path(@article), class: "btn btn-primary" %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p> Tagline <%= @article.user.tagline %> </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-4">
      <p> Date <%= @article.date %></p>
    </div>
    <div class="col-md-6">
      <p> <%= @article.duration %> min  </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 offset-md-4">
     <p> <%= image_tag "image.jpg" %></p>
   </div>
 </div>
 <div class="row text-center">
  <div class="col-md-12 offset-md-4">
   <p><%= @article.description %></p>
 </div>
</div>
<div class="row">
  <div class="col-md-12">
  <ul>
     <li><a href=""><i class="fa fa-heart-o"></i></a></li>
     <li><a href=""><i class="fa fa-twitter"></i></a></li>
     <li><a href=""><i class="fa fa-facebook"></i></a></li>
     <li><a href=""><i class="fa fa-sticky-note-o"></i></a></li>
   </ul>
 </div>
</div>
</div>
</div>
</div>



