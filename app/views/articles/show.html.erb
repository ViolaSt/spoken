<!-- Share Bar on the Side -->
<ul id="share">
  <li>
    <% if @reading.like %>
      <%= link_to '', unlike_article_readings_path(@article), :method=> :post, class:'fa fa-heart' %>
  </li>
    <% else %>
  <li>
    <%= link_to '', like_article_readings_path(@article), :method=> :post, class:'fa fa-heart-o' %>
  </li>
    <% end %>
  <li>
    <p> <%=  @article.readings.where(like: true).length %></p>
  </li>


<!-- bookmarking logic -->

    <% if @reading.recommended %>
  <li>
      <%= link_to '', unrecommend_article_readings_path(@article), :method=> :post, class:'fa fa-bookmark-o' %>
  </li>
    <% else %>
  <li>
      <%= link_to '', recommend_article_readings_path(@article), { method: :post, class:'fa fa-bookmark', remote: true, "data-toggle" =>  "modal", "data-target" => "#modal" } %>




        <!-- Modal -->
        <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Your recommendation</h4>
                <p>(leave blank if you want)</p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= simple_form_for(@reading, :url => recommend_article_readings_path(@article)) do |f| %>
                <%= f.error_notification %>
                <%= f.input :recommendation_content, label: false, placeholder: "This article was a life-changer!"  %>
                  <%= link_to 'delete bookmark', unrecommend_article_readings_path(@article), :method=> :post, class: "btn" %>
                  <%=f .submit 'Submit', class: 'btn btn-success btn-lg' %>
                    <%end%>
                  </div>

              </div>
            </div>
          </div>




      </div>


  </li>
    <% end %>
</ul>


<div class="container">
<p id="notice"><%= notice %></p>

<!-- Author information -->
  <div id="author">
<!-- User avatar picture -->
    <div class="col-sm-3 col-offset-sm-4">
      <%= cl_image_tag(user_image_path(@article.user), class: "avatar-large") || 'Image' %>
    </div>
<!-- User first and last name -->
    <div class="col-sm-9">

      <ul class="list-inline">
        <li>
          <h5><%= @article.user.first_name || 'First Name' %> <%= @article.user.last_name || 'Last Name' %></h5>
        </li>
        <li>
          <%= link_to 'Follow', article_followings_path(@article), class: "btn btn-sm btn-success" %>
          </li>
      </ul>
      <p><%= @article.user.tagline || 'Tagline' %></p>
      <p><%= @article.created_at.strftime("%d-%m-%Y")|| 'Date' %> / <%= @article.get_video_duration || 'Duration' %> min / Category: <%= @article.category %></p>
    </div>

  </div>

<!-- Title and Tagline -->
  <div class="row" id="title">
  <div class="col-xs-12 text-center">
        <h3><strong> <%= @article.title || 'Title' %></strong></h3>
  </div>
  </div>

  <!-- Youtube -->
  <div class="row" id="player">
        <iframe id="ytplayer" type="text/html" width="640" height="360"
        src="https://www.youtube.com/embed/<%= @article.video_id %>?autoplay=1"
        frameborder="0"></iframe>
  </div>

<!-- Description -->
 <div class="row" id="title">
   <div class="col-xs-12 text-center">
      <h4><%= @article.description || 'Description' %></h4>
    </div>
  </div>

<!--   Carousel -->
  <div class="row">
    <div id="carousel" class="owl-carousel">
      <% @articles.each do |article| %>
        <div class="card-wrapper">
          <div class="card" style="background-image: url('<%= cl_image_path(article_image_path(article)) %>');">
            <div class="card-description">
              <h2><%= article.title %></h2>
            </div>
            <a class="card-link" href="<%= article_path(article) %>"></a>
          </div>
          <div class="card-bio">
            <img class="card-user avatar">
            <div class="user-bio">
              <h6><%= "#{article.user.first_name} #{article.user.last_name}" %></h6>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>


  <!-- Comments -->
  <div class="row" id="comments">
  </div>
  </div>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<% content_for(:after_js) do %>
<script>$('#modal').modal({
  keyboard: true
})
</script>
