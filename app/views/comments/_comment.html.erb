<div class="comment-card" id="comment_<%= comment.id %>">
  <div class="avatar-card">
    <div class="avatar-container">
      <%= render 'shared/avatar_card', { user: comment.reading.user, timestamp: comment.created_at } %>
    </div>
  </div>
  <div class="comment-title">
    <p id="review-content"><strong><%= comment.title %></strong></p>
  </div>
  <div class="comment-content">
    <p id="review-content"><%= comment.content %></p>
  </div>
  <!-- Delete button -->
  <div class="comment-admin">
    <!-- User only sees a destroy button if the article is theirs -->
      <% if policy(comment).destroy? %>
      <%= link_to  article_comment_path(article, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment? This can not be reversed.' }, remote: true do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end %>
      <% end %>
  </div>
  <hr>
</div>
